<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

            <com.lansosdk.videoeditor.DrawPadView
                android:id="@+id/id_lottie_demo_drawpadview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.lansosdk.box.ViewLayerRelativeLayout
                android:id="@+id/id_lottie_demo_gllayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent" >

                <com.airbnb.LanSonglottie.LSLottieAnimationView
                    android:id="@+id/lottieView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:lottie_imageAssetsFolder="images/"
                    app:lottie_fileName="dammta.json"
                    app:lottie_loop="true" />
            </com.lansosdk.box.ViewLayerRelativeLayout>
    </RelativeLayout>
</LinearLayout>
